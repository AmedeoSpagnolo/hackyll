<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingTop="20dp"
                android:text="@string/no_active_victim" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button_add_victim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/button_round_corner"
                    android:gravity="center_vertical|center_horizontal"
                    android:onClick="show_add_victim_page"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="@string/button_add_victim"
                    android:textColor="@android:color/white" />

                <ListView
                    android:id="@+id/list_clients"
                    android:layout_width="368dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="140dp" />
            </LinearLayout>

            <!--<android.support.v7.widget.RecyclerView-->
            <!--android:id="@+id/my_recycler_view"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--tools:listitem="@layout/carditem_victim">-->

            <!--</android.support.v7.widget.RecyclerView>-->

        </LinearLayout>

</android.support.constraint.ConstraintLayout>
