<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/addserver_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClientActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="0dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/detail_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/gradient"
            app:elevation="0dp"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10.129.254.22" />
        </android.support.v7.widget.Toolbar>



    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@color/colorDark"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <ListView
            android:layout_width="match_parent"
            android:id="@+id/messages_view"
            android:layout_weight="2"
            android:divider="#fff"
            android:layout_height="wrap_content">

        </ListView>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_text_bg"
                android:layout_weight="2"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_gravity="bottom"
                    android:minHeight="46dp"
                    android:orientation="horizontal"
                    android:scaleType="fitCenter">

                    <ImageButton
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="10dp"
                        android:background="@drawable/text_input_keyboard"
                        android:padding="20dp"
                        android:scaleType="fitCenter" />
                </LinearLayout>

                <!--<EditText-->
                <!--android:layout_weight="2"-->
                <!--android:ems="10"-->
                <!--android:gravity="bottom"-->
                <!--android:hint="$ whoami"-->
                <!--android:inputType="textMultiLine"-->
                <!--android:maxLines="5"-->
                <!--android:paddingHorizontal="10dp"-->
                <!--android:scrollbars="vertical"-->
                <!--android:text="" />-->
                <EditText
                    android:id="@+id/myNewMessageBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:autoLink="all"
                    android:background="@null"
                    android:gravity="top|left"
                    android:hint="$ whoami"
                    android:inputType="textMultiLine|textCapSentences"
                    android:lines="5"
                    android:maxLines="10"
                    android:minLines="1"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:minHeight="46dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="10dp"
                        android:background="@drawable/tab"
                        android:padding="20dp"
                        android:scaleType="fitCenter" />
                </LinearLayout>

            </LinearLayout>
            <Space
                android:layout_width="5dp"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/action_exec"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imageButton"
                    android:onClick="sendMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:layout_marginLeft="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/exec" />
            </LinearLayout>


        </LinearLayout>








    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>